{
  "name": "steam-roi",
  "version": "0.0.1",
  "description": "An app to find out a steam game's ROI.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production npm run build:server && cross-env NODE_ENV=production npm run build:client",
    "build:dev": "run-s build:dev:client build:dev:server",
    "build:client": "webpack --progress --config webpack/webpack.client.js",
    "build:server": "webpack --progress --config webpack/webpack.server.js",
    "build:dev:client": "cross-env NODE_ENV=development npm run build:client",
    "build:dev:server": "cross-env NODE_ENV=development npm run build:server",
    "clean": "rm -rf public/* && rm -rf reports/*",
    "dev": "run-s clean watch",
    "format": "modern format",
    "lint": "npm run lint:js && npm run lint:vue",
    "lint:js": "modern lint",
    "lint:vue": "eslint . --ext .vue",
    "precommit": "modern precommit && npm run lint:vue",
    "start": "npm run build && cross-env NODE_ENV=production npm run server:start",
    "server:start": "node ./server/index.js",
    "server:debug": "node --inspect-brk ./server/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk=0.0.0.0 ./node_modules/jest/.bin/jest --runInBand --collectCoverage false",
    "test:debug:win": "cross-env NODE_ENV=test node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --runInBand --collectCoverage false",
    "test:watch": "npm run test -- --watch --collectCoverage false",
    "watch": "npm run build:dev:client && run-p watch:client watch:server",
    "watch:client": "cross-env NODE_ENV=development webpack-dev-server --config webpack/webpack.client.js",
    "watch:server": "cross-env NODE_ENV=development webpack -w --config webpack/webpack.server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgautsch/steam-roi.git"
  },
  "keywords": [
    "steam",
    "node",
    "javascript",
    "vue",
    "ssr"
  ],
  "author": "Dan Gautsch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgautsch/steam-roi/issues"
  },
  "homepage": "https://github.com/dgautsch/steam-roi#readme",
  "dependencies": {
    "@babel/core": "7.7.4",
    "@babel/plugin-syntax-dynamic-import": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "async": "2.6.0",
    "axios": "0.19.2",
    "babel-loader": "8.0.6",
    "babel-plugin-component": "1.1.1",
    "bcrypt": "5.0.0",
    "connect-mongo": "3.2.0",
    "cookie-parser": "1.4.3",
    "cross-env": "6.0.3",
    "css-loader": "3.2.0",
    "dotenv": "4.0.0",
    "element-ui": "2.13.0",
    "express": "4.16.2",
    "express-session": "1.15.6",
    "express-validator": "5.0.0",
    "file-loader": "5.0.2",
    "lodash-es": "4.17.15",
    "mongoose": "5.7.13",
    "morgan": "1.9.1",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "passport-steam": "1.0.12",
    "sass-loader": "8.0.0",
    "steamapi": "2.1.2",
    "url-loader": "3.0.0",
    "vue": "2.6.12",
    "vue-cookies": "1.7.0",
    "vue-loader": "15.8.3",
    "vue-meta": "2.3.1",
    "vue-router": "3.1.3",
    "vue-server-renderer": "2.6.12",
    "vue-ssr-webpack-plugin": "3.0.0",
    "vue-style-loader": "4.1.2",
    "vue-template-compiler": "2.6.12",
    "vuex": "3.1.2",
    "vuex-router-sync": "5.0.0",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.7.6",
    "@types/jest": "24.0.24",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-html": "6.0.0",
    "eslint-plugin-jest": "23.1.0",
    "eslint-plugin-vue": "6.1.2",
    "modern-node": "2.7.0",
    "mongodb-memory-server": "6.1.1",
    "nodemon-webpack-plugin": "4.3.2",
    "regenerator-runtime": "0.13.3",
    "standard": "14.3.3",
    "vue-eslint-parser": "7.0.0",
    "vue-jest": "3.0.5",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "endOfLine": "lf"
  },
  "standard": {
    "env": {
      "node": true,
      "jest/globals": true
    },
    "parser": "babel-eslint"
  }
}
