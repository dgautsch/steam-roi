{
  "name": "steam-roi",
  "version": "0.0.1",
  "description": "An app to find out a steam game's ROI.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production npm run build:server && cross-env NODE_ENV=production npm run build:client",
    "build:dev": "run-s build:dev:client build:dev:server",
    "build:client": "webpack --progress --hide-modules --config webpack/webpack.client.js",
    "build:server": "webpack --config webpack/webpack.server.js",
    "build:dev:client": "cross-env NODE_ENV=development npm run build:client",
    "build:dev:server": "cross-env NODE_ENV=development npm run build:server",
    "clean": "rm -rf public/* && rm -rf reports/*",
    "dev": "run-s clean build:dev dev:watch",
    "dev:watch": "run-p watch:client watch:server",
    "format": "modern format",
    "lint": "modern lint",
    "precommit": "modern precommit",
    "start": "cross-env npm run build && cross-env NODE_ENV=production npm run server:start",
    "server:start": "node -r dotenv/config ./server/index.js dotenv_config_path=$(pwd)/config/.env",
    "server:debug": "node --inspect-brk -r dotenv/config ./server/index.js dotenv_config_path=$(pwd)/config/.env",
    "test": "modern test",
    "watch:client": "cross-env NODE_ENV=development webpack-dev-server --config webpack/webpack.client.js",
    "watch:server": "nodemon --watch server --watch app/templates --exec npm run server:start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgautsch/steam-roi.git"
  },
  "keywords": [
    "steam",
    "node",
    "javascript",
    "vue",
    "ssr"
  ],
  "author": "Dan Gautsch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgautsch/steam-roi/issues"
  },
  "homepage": "https://github.com/dgautsch/steam-roi#readme",
  "dependencies": {
    "@babel/core": "7.7.4",
    "@babel/plugin-syntax-dynamic-import": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "async": "2.6.0",
    "babel-loader": "8.0.6",
    "body-parser": "1.18.2",
    "cookie-parser": "1.4.3",
    "cross-env": "6.0.3",
    "css-loader": "3.2.0",
    "dotenv": "4.0.0",
    "element-ui": "2.13.0",
    "express": "4.16.2",
    "express-session": "1.15.6",
    "express-validator": "5.0.0",
    "file-loader": "5.0.2",
    "mongoose": "5.7.13",
    "morgan": "1.9.1",
    "node-sass": "4.13.0",
    "npm-run-all": "4.1.5",
    "passport": "0.4.0",
    "passport-steam": "1.0.12",
    "prettier-standard": "16.0.0",
    "sass-loader": "8.0.0",
    "standard": "10.0.3",
    "steamapi": "2.0.7",
    "vue": "2.6.10",
    "vue-loader": "15.7.2",
    "vue-meta": "2.3.1",
    "vue-router": "3.1.3",
    "vue-server-renderer": "2.6.10",
    "vue-ssr-webpack-plugin": "3.0.0",
    "vue-style-loader": "4.1.2",
    "vue-template-compiler": "2.6.10",
    "vuex": "3.1.2",
    "vuex-router-sync": "5.0.0",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "eslint-plugin-jest": "23.1.0",
    "lint-staged": "10.0.0-beta.6",
    "modern-node": "2.6.0",
    "nodemon": "2.0.1",
    "vue-hot-reload-api": "2.3.4",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.9.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2
  },
  "standard": {
    "env": "node",
    "parser": "babel-eslint"
  }
}
