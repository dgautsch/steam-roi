{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "~app/*": ["app/*"],
      "~assets/*": ["app/assets/*"],
      "~components/*": ["app/components/*"],
      "~config/*": ["config/*"],
      "~data/*": ["app/data/*"],
      "~plugins/*": ["app/plugins/*"],
      "~routes/*": ["app/routes/*"],
      "~sass/*": ["app/sass/*"],
      "~server/*": ["server/*"]
    }
  },
  "exclude": ["node_modules", "Public", "coverage"]
}
